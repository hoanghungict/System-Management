{
  "openapi": "3.0.3",
  "info": {
    "title": "HPC Project API - Complete",
    "description": "Complete API documentation for HPC Project - Student Management System with all modules",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@hpcproject.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Development server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/v1/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "description": "Login with username and password for students or lecturers",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/v1/departments": {
      "get": {
        "tags": ["Department Management"],
        "summary": "Get all departments",
        "description": "Retrieve list of all departments (Admin only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Departments retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      },
      "post": {
        "tags": ["Department Management"],
        "summary": "Create new department",
        "description": "Create a new department (Admin only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDepartmentRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Department created successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      }
    },
    "/v1/departments/tree": {
      "get": {
        "tags": ["Department Management"],
        "summary": "Get department tree",
        "description": "Get hierarchical tree view of departments (Admin only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Department tree retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      }
    },
    "/v1/classes": {
      "get": {
        "tags": ["Class Management"],
        "summary": "Get all classes",
        "description": "Retrieve list of all classes (Admin only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Classes retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      },
      "post": {
        "tags": ["Class Management"],
        "summary": "Create new class",
        "description": "Create a new class (Admin only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateClassRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Class created successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      }
    },
    "/v1/classes/faculty/{facultyId}": {
      "get": {
        "tags": ["Class Management"],
        "summary": "Get classes by faculty",
        "description": "Get all classes belonging to a specific faculty (Admin only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "facultyId",
            "in": "path",
            "required": true,
            "description": "Faculty ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Classes retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      }
    },
    "/v1/roll-calls": {
      "post": {
        "tags": ["Roll Call Management"],
        "summary": "Create roll call session",
        "description": "Create a new roll call session (Lecturer only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateRollCallRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Roll call session created successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Lecturer only"
          }
        }
      }
    },
    "/v1/roll-calls/class/{classId}": {
      "get": {
        "tags": ["Roll Call Management"],
        "summary": "Get roll calls by class",
        "description": "Get all roll call sessions for a specific class (Lecturer only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "classId",
            "in": "path",
            "required": true,
            "description": "Class ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Roll call sessions retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Lecturer only"
          }
        }
      }
    },
    "/v1/roll-calls/{rollCallId}/status": {
      "put": {
        "tags": ["Roll Call Management"],
        "summary": "Update student roll call status",
        "description": "Update attendance status for a single student (Lecturer only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "rollCallId",
            "in": "path",
            "required": true,
            "description": "Roll Call ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateRollCallStatusRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Roll call status updated successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Lecturer only"
          }
        }
      }
    },
    "/v1/roll-calls/{rollCallId}/bulk-status": {
      "put": {
        "tags": ["Roll Call Management"],
        "summary": "Bulk update roll call status",
        "description": "Update attendance status for multiple students (Lecturer only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "rollCallId",
            "in": "path",
            "required": true,
            "description": "Roll Call ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BulkUpdateRollCallStatusRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Roll call statuses updated successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Lecturer only"
          }
        }
      }
    },
    "/v1/events/publish": {
      "post": {
        "tags": ["Event Publishing"],
        "summary": "Publish event to Kafka",
        "description": "Publish business event to Kafka message queue",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["event_type", "data"],
                "properties": {
                  "event_type": {
                    "type": "string",
                    "description": "Type of event",
                    "example": "task_assigned"
                  },
                  "data": {
                    "type": "object",
                    "description": "Event data"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Event published successfully"
          },
          "400": {
            "description": "Invalid event data"
          }
        }
      }
    },
    "/v1/notifications/send": {
      "post": {
        "tags": ["Notifications"],
        "summary": "Send notification",
        "description": "Send single notification to user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendNotificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notification sent successfully"
          },
          "400": {
            "description": "Invalid notification data"
          }
        }
      }
    },
    "/v1/notifications/send-bulk": {
      "post": {
        "tags": ["Notifications"],
        "summary": "Send bulk notifications",
        "description": "Send notifications to multiple users",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendBulkNotificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notifications sent successfully"
          },
          "400": {
            "description": "Invalid notification data"
          }
        }
      }
    },
    "/v1/notifications/schedule": {
      "post": {
        "tags": ["Notifications"],
        "summary": "Schedule notification",
        "description": "Schedule notification for future delivery",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ScheduleNotificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notification scheduled successfully"
          },
          "400": {
            "description": "Invalid notification data"
          }
        }
      }
    },
    "/v1/internal/notifications/user": {
      "get": {
        "tags": ["Internal Notifications"],
        "summary": "Get user notifications",
        "description": "Get notifications for authenticated user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "description": "User ID",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "user_type",
            "in": "query",
            "required": true,
            "description": "User type",
            "schema": {
              "type": "string",
              "enum": ["student", "lecturer"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Notifications retrieved successfully"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from login endpoint"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": ["username", "password", "user_type"],
        "properties": {
          "username": {
            "type": "string",
            "maxLength": 255,
            "example": "student001"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "example": "password123"
          },
          "user_type": {
            "type": "string",
            "enum": ["student", "lecturer"],
            "example": "student"
          }
        }
      },
      "CreateDepartmentRequest": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 255,
            "example": "Khoa Công nghệ thông tin"
          },
          "type": {
            "type": "string",
            "enum": ["school", "faculty", "department"],
            "example": "faculty"
          },
          "parent_id": {
            "type": "integer",
            "nullable": true,
            "example": 1
          }
        }
      },
      "CreateClassRequest": {
        "type": "object",
        "required": ["class_name", "class_code", "faculty_id", "school_year"],
        "properties": {
          "class_name": {
            "type": "string",
            "maxLength": 255,
            "example": "Lớp CNTT K20"
          },
          "class_code": {
            "type": "string",
            "maxLength": 50,
            "example": "CNTT20"
          },
          "faculty_id": {
            "type": "integer",
            "example": 1
          },
          "lecturer_id": {
            "type": "integer",
            "nullable": true,
            "example": 1
          },
          "school_year": {
            "type": "string",
            "maxLength": 20,
            "example": "2023-2024"
          }
        }
      },
      "CreateRollCallRequest": {
        "type": "object",
        "required": ["class_id", "title", "date", "created_by"],
        "properties": {
          "class_id": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "maxLength": 255,
            "example": "Điểm danh buổi 1"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Điểm danh môn Lập trình Web"
          },
          "date": {
            "type": "string",
            "format": "date",
            "example": "2024-01-15"
          },
          "created_by": {
            "type": "integer",
            "example": 1
          }
        }
      },
      "UpdateRollCallStatusRequest": {
        "type": "object",
        "required": ["student_id", "status"],
        "properties": {
          "student_id": {
            "type": "integer",
            "example": 1
          },
          "status": {
            "type": "string",
            "enum": ["Có Mặt", "Vắng Mặt", "Có Phép", "Muộn"],
            "example": "Có Mặt"
          },
          "note": {
            "type": "string",
            "nullable": true,
            "example": "Đến muộn 10 phút"
          }
        }
      },
      "BulkUpdateRollCallStatusRequest": {
        "type": "object",
        "required": ["student_statuses"],
        "properties": {
          "student_statuses": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["student_id", "status"],
              "properties": {
                "student_id": {
                  "type": "integer",
                  "example": 1
                },
                "status": {
                  "type": "string",
                  "enum": ["Có Mặt", "Vắng Mặt", "Có Phép", "Muộn"],
                  "example": "Có Mặt"
                },
                "note": {
                  "type": "string",
                  "nullable": true,
                  "example": "Ghi chú"
                }
              }
            }
          }
        }
      },
      "SendNotificationRequest": {
        "type": "object",
        "required": ["template", "recipients"],
        "properties": {
          "template": {
            "type": "string",
            "example": "task_assignment"
          },
          "recipients": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["user_id", "user_type", "channels"],
              "properties": {
                "user_id": {
                  "type": "integer",
                  "example": 1
                },
                "user_type": {
                  "type": "string",
                  "enum": ["student", "lecturer"],
                  "example": "student"
                },
                "channels": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["email", "push", "sms"]
                  },
                  "example": ["email", "push"]
                }
              }
            }
          },
          "data": {
            "type": "object",
            "description": "Template data"
          }
        }
      },
      "SendBulkNotificationRequest": {
        "type": "object",
        "required": ["template", "recipients"],
        "properties": {
          "template": {
            "type": "string",
            "example": "announcement"
          },
          "recipients": {
            "type": "array",
            "maxItems": 1000,
            "items": {
              "type": "object",
              "required": ["user_id", "user_type", "channels"],
              "properties": {
                "user_id": {
                  "type": "integer",
                  "example": 1
                },
                "user_type": {
                  "type": "string",
                  "enum": ["student", "lecturer"],
                  "example": "student"
                },
                "channels": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["email", "push", "sms"]
                  },
                  "example": ["email"]
                }
              }
            }
          },
          "data": {
            "type": "object",
            "description": "Template data"
          }
        }
      },
      "ScheduleNotificationRequest": {
        "type": "object",
        "required": ["template", "recipients", "scheduled_at"],
        "properties": {
          "template": {
            "type": "string",
            "example": "reminder"
          },
          "recipients": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["user_id", "user_type", "channels"],
              "properties": {
                "user_id": {
                  "type": "integer",
                  "example": 1
                },
                "user_type": {
                  "type": "string",
                  "enum": ["student", "lecturer"],
                  "example": "student"
                },
                "channels": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["email", "push", "sms"]
                  },
                  "example": ["email"]
                }
              }
            }
          },
          "data": {
            "type": "object",
            "description": "Template data"
          },
          "scheduled_at": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-15T10:30:00Z"
          }
        }
      }
    }
  }
}
